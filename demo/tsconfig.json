{
    "compilerOptions": {
        "target": "es2017",
        "module": "esnext",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "lib": [
            "dom",
            "es2017"
        ],
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "app/*"
            ],
            "@/*": [
                "app/*"
            ]
        },
        "moduleResolution": "node",
        "removeComments": false
    },
    "exclude": [
        "node_modules",
        "platforms",
        "../src/node_modules"
    ],
    "include": [
        "../src",
        "**/*"
    ]
}